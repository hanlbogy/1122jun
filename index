        let currentQ = 0;
        let scores = {};

        function startQuiz() {
            const name = document.getElementById('userName').value;
            const grade = document.getElementById('userGrade').value;
            if(!name || !grade) {
                document.getElementById('startError').style.display = 'block';
                return;
            }
            
            // ì ìˆ˜ ì´ˆê¸°í™”
            scores = {
                "ì°½ì˜ì ì¸ ê¸°íšì": 0,
                "íƒêµ¬í•˜ëŠ” ë¶„ì„ê°€": 0,
                "ê³µê°í•˜ëŠ” ì¡°ë ¥ì": 0,
                "ì£¼ë„ì ì¸ ì‹¤í–‰ê°€": 0,
                "ì‹¤ì²œì ì¸ ì œì‘ì": 0,
                "ê¼¼ê¼¼í•œ ê´€ë¦¬ì": 0,
                "í‘œí˜„í•˜ëŠ” ì „ë‹¬ì": 0,
                "ë„ì „í•˜ëŠ” ê°œì²™ê°€": 0,
                "ì¡°í™”ë¡œìš´ ì¤‘ì¬ì": 0,
                "ìœµí•©í•˜ëŠ” í˜ì‹ ê°€": 0
            };
            
            document.getElementById('startScreen').classList.remove('active');
            document.getElementById('quizScreen').classList.add('active');
            showQuestion();
        }

        function showQuestion() {
            const q = quizData[currentQ];
            document.getElementById('progressFill').style.width = ((currentQ+1)/quizData.length*100) + '%';
            document.getElementById('questionNumber').innerText = 'QUESTION ' + (currentQ+1) + ' / ' + quizData.length;
            document.getElementById('questionText').innerText = q.question;
            
            const container = document.getElementById('answersContainer');
            container.innerHTML = '';
            
            q.answers.forEach(ans => {
                const btn = document.createElement('button');
                btn.className = 'answer-btn';
                btn.innerText = ans.text;
                btn.onclick = () => {
                    scores[ans.type]++;
                    nextQuestion();
                };
                container.appendChild(btn);
            });
        }

        function nextQuestion() {
            if(currentQ < quizData.length - 1) {
                currentQ++;
                showQuestion();
            } else {
                showResult();
            }
        }

        function showResult() {
            let max = -1;
            let type = '';
            
            // ë™ì ì ì²˜ë¦¬ ë¡œì§ (ë‹¨ìˆœí™”: ë¨¼ì € ë°œê²¬ëœ ìœ í˜•)
            for(let key in scores) {
                if(scores[key] > max) {
                    max = scores[key];
                    type = key;
                }
            }

            const info = resultData[type];
            document.getElementById('resultName').innerText = document.getElementById('userName').value;
            document.getElementById('resultGrade').innerText = document.getElementById('userGrade').value;
            const date = new Date();
            document.getElementById('resultDate').innerText = `${date.getFullYear()}.${date.getMonth()+1}.${date.getDate()}`;
            
            document.getElementById('resultType').innerText = type;

            const tagsContainer = document.getElementById('resultTags');
            tagsContainer.innerHTML = '';
            info.tags.forEach(tag => {
                const sp = document.createElement('span');
                sp.className = 'tag';
                sp.innerText = tag;
                tagsContainer.appendChild(sp);
            });

            const fillList = (id, arr) => {
                const el = document.getElementById(id);
                el.innerHTML = '';
                arr.forEach(txt => {
                    const li = document.createElement('li');
                    li.innerText = txt;
                    el.appendChild(li);
                });
            };

            fillList('strengthsList', info.strengths);
            fillList('careersList', info.careers);
            
            const compContainer = document.getElementById('competencyTags');
            compContainer.innerHTML = '';
            info.competencies.forEach(txt => {
                const sp = document.createElement('span');
                sp.className = 'pill';
                sp.innerText = txt;
                compContainer.appendChild(sp);
            });

            document.getElementById('adviceContent').innerText = info.advice;

            document.getElementById('quizScreen').classList.remove('active');
            document.getElementById('resultScreen').classList.add('active');
        }
        
        // ëª¨ë°”ì¼ ë¸Œë¼ìš°ì € ì£¼ì†Œì°½ í¬ê¸° ëŒ€ì‘
        window.addEventListener('resize', () => {
            let vh = window.innerHeight * 0.01;
            document.documentElement.style.setProperty('--vh', `${vh}px`);
        });
    </script>
